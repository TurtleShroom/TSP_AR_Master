<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="RomeArmourMakeableBase">
    <defName>Apparel_Legionarmor</defName>
    <label>legion armor</label>
    <description>Legion armor modeled after the plates of old.</description>
    <recipeMaker>
      <unfinishedThingDef>UnfinishedMetallicTechArmor</unfinishedThingDef>
      <researchPrerequisite>PlateArmor</researchPrerequisite>
      <skillRequirements>
        <Crafting>7</Crafting>
      </skillRequirements>
    </recipeMaker>
    <graphicData>
      <texPath>Things/Pawn/Apparel/Legion/Legion</texPath>
      <graphicClass>Graphic_Single</graphicClass>
	  <drawSize>1.5</drawSize>
    </graphicData>
    <stuffCategories>
      <li>Metallic</li>
      <li>Woody</li>
    </stuffCategories>
    <costStuffCount>170</costStuffCount>
    <statBases>
      <WorkToMake>3000</WorkToMake>
      <MaxHitPoints>290</MaxHitPoints>
      <Mass>15</Mass>
      <StuffEffectMultiplierArmor>0.73</StuffEffectMultiplierArmor>
      <StuffEffectMultiplierInsulation_Cold>1</StuffEffectMultiplierInsulation_Cold>
      <StuffEffectMultiplierInsulation_Heat>0</StuffEffectMultiplierInsulation_Heat>
      <EquipDelay>15</EquipDelay>
    </statBases>
    <thingSetMakerTags></thingSetMakerTags>
    <equippedStatOffsets>
      <MoveSpeed>-0.5</MoveSpeed>
    </equippedStatOffsets>
    <thingCategories></thingCategories>
    <apparel>
      <bodyPartGroups>
        <li>Torso</li>
        <li>Neck</li>
        <li>Shoulders</li>
        <li>Arms</li>
        <li>Legs</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/Pawn/Apparel/Legion/Legion</wornGraphicPath>
      <layers>
        <li>Middle</li>
      </layers>
      <tags>
        <li>Roman</li>
		<li>ClassicalMilitary</li>
      </tags>
      <defaultOutfitTags>
        <li>Roman</li>
		<li>Soldier</li>
      </defaultOutfitTags>
    </apparel>
    <colorGenerator Class="ColorGenerator_Options">
      <options>
        <li>
          <weight>10</weight>
          <only>(0.33,0.33,0.33)</only>
        </li>
        <li>
          <weight>10</weight>
          <only>(0.65,0.65,0.65)</only>
        </li>
        <li>
          <weight>6</weight>
          <min>(0.3,0.3,0.3)</min>
          <max>(0.5,0.5,0.5)</max>
        </li>
      </options>
    </colorGenerator>
  </ThingDef>
  
  
