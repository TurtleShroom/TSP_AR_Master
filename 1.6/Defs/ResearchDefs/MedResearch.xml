        <!-- <li MayRequire="morishep.tarojun.onioftherim">OotR_OniStart</li> -->
    </tags>
    <tab>AR_ResearchTab</tab>
    <researchViewX>1</researchViewX>
    <researchViewY>0</researchViewY>
