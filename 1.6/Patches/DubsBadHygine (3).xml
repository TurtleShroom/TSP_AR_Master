	<Operation Class="PatchOperationConditional">
		<xpath>/Defs/ThingDef[defName = "WaterTowerS"]</xpath>
		<match Class="PatchOperationSequence">
			<operations>
				<li Class="PatchOperationReplace" MayRequire="dankpyon.medieval.overhaul,dubwise.dubsbadhygiene">
					<xpath>Defs/ThingDef[defName = "DankPyon_Fountain1x1c"  or defName = "DankPyon_Fountain2x2c"]/comps</xpath>
					<success>Always</success>
					<value>
						<comps Inherit="False">
							<li Class="DubsBadHygiene.CompProperties_Pipe" MayRequire="dankpyon.medieval.overhaul,dubwise.dubsbadhygiene">
								<mode>Sewage</mode>
							</li>
							<li Class="CompProperties_Forbiddable"></li>
							<li Class="CompProperties_Art">
								<nameMaker>NamerArtFurniture</nameMaker>
								<descriptionMaker>ArtDescription_Furniture</descriptionMaker>
								<minQualityForArtistic>Awful</minQualityForArtistic>
								<canBeEnjoyedAsArt>true</canBeEnjoyedAsArt>
							</li>
							<li>
								<compClass>CompColorable</compClass>
							</li>
							<li Class="CompProperties_MeditationFocus">
								<statDef>MeditationFocusStrength</statDef>
								<focusTypes>
									<li>Artistic</li>
									<li>Dignified</li>
									<li MayRequire="arquebus.stagzmerfolk">Stagz_Water</li>
								</focusTypes>
							</li>
							<li Class="CompProperties_Styleable"></li>
							<li>
								<compClass>CompGatherSpot</compClass>
							</li>
						</comps>
					</value>
				</li>
				
				<li Class="PatchOperationReplace" MayRequire="dankpyon.medieval.overhaul,dubwise.dubsbadhygiene">
					<xpath>/Defs/ThingDef[defName="DankPyon_BarrelWater"]/comps</xpath>
					<success>Always</success>
					<value>
						<comps>
							<li Class="DubsBadHygiene.CompProperties_WaterStorage" MayRequire="dankpyon.medieval.overhaul,dubwise.dubsbadhygiene">
								<WaterStorageCap>1500</WaterStorageCap>
								<AutoOnRain>True</AutoOnRain>
								<AutoGenRate>9</AutoGenRate>
							</li>
							<li Class="CompProperties_Styleable"></li>
						</comps>
					</value>
				</li>
				
				<li Class="PatchOperationReplace" MayRequire="dankpyon.medieval.overhaul,dubwise.dubsbadhygiene">
					<xpath>Defs/ThingDef[defName = "DankPyon_Fountain1x1c" or defName = "DankPyon_Fountain2x2c"]/thingClass</xpath>
					<success>Always</success>
					<value>
						<thingClass MayRequire="dankpyon.medieval.overhaul,dubwise.dubsbadhygiene">DubsBadHygiene.Building_basin</thingClass>
					</value>
				</li>
				
				<li Class="PatchOperationReplace" MayRequire="dankpyon.medieval.overhaul,dubwise.dubsbadhygiene">
					<xpath>Defs/ThingDef[defName="DankPyon_BarrelWater"]/thingClass</xpath>
					<success>Always</success>
					<value>
						<thingClass MayRequire="dankpyon.medieval.overhaul,dubwise.dubsbadhygiene">DubsBadHygiene.Building_washbucket</thingClass>
					</value>
				</li>
			</operations>
		</match>
	</Operation>
	
	<Operation Class="PatchOperationConditional">
	<!-- Does this exist? -->
		<xpath>/Defs/ThingDef[defName="WaterWellInlet"]</xpath>
		<!-- If it does, do this replacement. -->
		<match Class="PatchOperationReplace">
			<xpath>Defs/ThingDef[defName = "DankPyon_Fountain1x1c" or defName = "DankPyon_Fountain2x2c"]/designationCategory</xpath>
			<success>Always</success>
			<value>
				<designationCategory>Hygiene</designationCategory>
			</value>
		</match>
		<!-- If the first XPATH does not exist, the original code stands. -->
	</Operation>

	<Operation Class="PatchOperationConditional">
	<!-- Does this exist? -->
		<xpath>/Defs/ThingDef[defName="WaterWellInlet"]</xpath>
		<!-- If it does, do this replacement. -->
